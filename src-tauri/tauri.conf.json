{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyTodo",
  "version": "1.0.0",
  "identifier": "com.mytodo.app",
  "build": {
    "frontendDist": "../public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "",
        "width": 1000,
        "height": 700,
        "minWidth": 400,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.loli.net; font-src 'self' https://gstatic.loli.net https://fonts.loli.net; img-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost https://api.github.com https://gitee.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "nsis",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}